<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <title>Book Registration</title>
</head>
<body>
    <%- include('./partials/nav.ejs') %>
    <div class="container">
    <h2>Book Registration</h2>
    <form action="api/books/register" method="POST">
        <div class="form-group">
            <label for="title">Title:</label><br>
            <input type="text" class="form-control" id="title" name="title" required><br><br>
        </div>
        <div class="form-group">
            <label for="author">Author:</label><br>
            <input type="text" class="form-control" id="author" name="author" required><br><br>
        </div>
        <div class="form-group">
            <label for="isbn">ISBN:</label><br>
            <input type="text" class="form-control" id="isbn" name="isbn" required><br><br>
        </div>
        <div class="form-group">
            <label for="genre">Genre:</label><br>
            <input type="text" class="form-control" id="genre" name="genre" required><br><br>
        </div>
        <div class="form-group">
            <label for="desc">Description:</label><br>
            <textarea  class="form-control" id="desc" name="desc" required></textarea><br><br>
        </div>
    
        <input type="submit" value="Submit" class="btn btn-primary">
    </form>
</div>
</body>
</html>